{% style %}
  .featured-product-section {
      letter-spacing: var(--letter-spacing-body);
      background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_bg_color }}{% endif %};
      color: {{ section.settings.text_color }};
      --accent-color: {{ section.settings.accent_color }};
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  /* Added container class to handle the margin without affecting other sections */
  .shop-product-inner-container {
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;
  }
  .shop-product-info {
      gap: {{ section.settings.blocks_spacing }}px;
      color: {{ section.settings.text_color }};
  }
  .shop-main-image-wrapper {
      background-color: {{ section.settings.main_image_bg_color }};
  }
  .shop-thumbnail {
      border: 1px solid {{ section.settings.thumbnail_border_color }};
  }
  .shop-thumbnail.active {
      border-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.thumbnail_active_border_color }}{% endif %};
  }
  .shop-indicator-dot {
      background-color: {{ section.settings.indicator_color }};
  }
  .shop-indicator-dot.active {
      background-color: {{ section.settings.indicator_active_color }};
  }
  .shop-nav-arrow {
      background-color: {{ section.settings.arrow_bg_color }};
      border: 1px solid {{ section.settings.arrow_border_color }};
  }
  .shop-product-title {
      color: {{ section.settings.title_color }};
  }
  .shop-product-price {
      color: {{ section.settings.price_color }} !important;
  }
  .shop-compare-price {
      color: {{ section.settings.compare_price_color }} !important;
  }
  .shop-save-price {
      background-color: {{ section.settings.sale_badge_bg_color }} !important;
      color: {{ section.settings.sale_badge_text_color }} !important;
  }
  .shop-product-description {
      color: {{ section.settings.description_color }};
  }
  .shop-read-more, .shop-read-less {
      color: {{ section.settings.accent_color }};
  }
  .shop-custom-content {
      color: {{ section.settings.custom_content_color }};
  }
  
  /* Style for the add to cart button */
  .shop-add-to-cart-button {
      background-color: {% if section.settings.use_theme_colors %}
                           {% if settings.use_dedicated_button_colors %}
                             {% if settings.global_section_button_color != blank %}
                               {{ settings.global_section_button_color }}
                             {% else %}
                               {{ settings.global_section_accent_1_color }}
                             {% endif %}
                           {% else %}
                             {{ settings.global_section_accent_1_color }}
                           {% endif %}
                         {% else %}
                           {{ section.settings.button_color }}
                         {% endif %} !important;
      color: {% if section.settings.use_theme_colors %}
               {% if settings.use_dedicated_button_colors %}
                 {% if settings.global_section_button_text_color != blank %}
                   {{ settings.global_section_button_text_color }}
                 {% else %}
                   {{ settings.global_section_background_color }}
                 {% endif %}
               {% else %}
                 {{ settings.global_section_background_color }}
               {% endif %}
             {% else %}
               {{ section.settings.button_text_color }}
             {% endif %} !important;
  }
  
  /* Fix for white color swatches */
  .simple-variant-picker__color-swatch[data-white-swatch="true"],
  .simple-variant-picker__color-swatch[style*="background-color: #fff"],
  .simple-variant-picker__color-swatch[style*="background-color: #ffffff"],
  .simple-variant-picker__color-swatch[style*="background-color: #FFFFFF"] {
    border: 1px solid #e0e0e0 !important;
  }
{% endstyle %}

<div class="featured-product-section" 
  style="
    background-color: {% if section.settings.use_theme_color %}var(--color-{{ section.settings.background_color }}){% else %}{{ section.settings.custom_background_color }}{% endif %};
    color: {% if section.settings.use_theme_color %}var(--color-{{ section.settings.text_color }}){% else %}{{ section.settings.custom_text_color }}{% endif %};
    padding-top: {{ section.settings.top_spacing }}px;
    padding-bottom: {{ section.settings.bottom_spacing }}px;
    padding-left: {{ section.settings.left_padding }}px;
    padding-right: {{ section.settings.right_padding }}px;
  "
  id="section-{{ section.id }}">
  <div class="shop-product-inner-container">
    {% if section.settings.featured_product != blank %}
      {% assign product = all_products[section.settings.featured_product] %}
      
      {% if product != blank %}
        <div class="shop-product-layout">
          {% render 'e_product-gallary', product: product %}

          <!-- Product Information Column -->
          {% if section.settings.show_product_info %}
            <div class="shop-product-info">
              {% render 'e_product-info', product: product, section: section %}
            </div>
          {% endif %}
        </div>
      {% else %}
        <div class="section-empty">
          <p>Please select a product in the section settings</p>
        </div>
      {% endif %}
    {% else %}
      <div class="section-empty">
        <p>Please select a product in the section settings</p>
      </div>
    {% endif %}
  </div>
</div>

