{{ 'customer-reviews-carousel.css' | asset_url | stylesheet_tag }}

{% comment %} Google Fonts for accent text customization {% endcomment %}
{% if section.settings.accent_font_family == 'Georgia Pro' or section.settings.accent_font_family == 'Bodoni Moda' %}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  {% if section.settings.accent_font_family == 'Georgia Pro' %}
    <link href="https://fonts.googleapis.com/css2?family=Georgia+Pro:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap" rel="stylesheet">
  {% endif %}
  {% if section.settings.accent_font_family == 'Bodoni Moda' %}
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400;0,6..96,500;0,6..96,600;0,6..96,700;1,6..96,400;1,6..96,500;1,6..96,600;1,6..96,700&display=swap" rel="stylesheet">
  {% endif %}
{% endif %}

{{ 'customer-reviews-carousel.js' | asset_url | defer | script_tag }}

<div class="reviews-transformation-section" 
     style="background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_background }}{% endif %};">
  <div class="rating-summary-wrapper">
    <div class="reviews-rating-summary" style="
      {% if section.settings.enable_rating_summary_gradient %}
        background: linear-gradient({{ section.settings.rating_summary_gradient_direction }}, {{ section.settings.rating_summary_gradient_start }}, {{ section.settings.rating_summary_gradient_end }});
      {% else %}
        background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_2_color }}{% else %}{{ section.settings.rating_summary_bg_color }}{% endif %};
      {% endif %}
      {% if section.settings.enable_rating_summary_border %}
        border: {{ section.settings.rating_summary_border_width }}px {{ section.settings.rating_summary_border_style }} {{ section.settings.rating_summary_border_color }};
      {% endif %}
      border-radius: {{ section.settings.rating_summary_border_radius | default: 50 }}px;
    ">
      <span class="rating-stars">
        <div class="stars">
          {% for i in (1..5) %}
            <svg class="star summary-star" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.5245 3.46353C11.6741 3.00287 12.3259 3.00287 12.4755 3.46353L14.1329 8.56434C14.1998 8.77035 14.3918 8.90983 14.6084 8.90983H19.9717C20.4561 8.90983 20.6575 9.52964 20.2656 9.81434L15.9266 12.9668C15.7514 13.0941 15.678 13.3198 15.745 13.5258L17.4023 18.6266C17.552 19.0873 17.0248 19.4704 16.6329 19.1857L12.2939 16.0332C12.1186 15.9059 11.8814 15.9059 11.7061 16.0332L7.3671 19.1857C6.97524 19.4704 6.448 19.0873 6.59768 18.6266L8.25503 13.5258C8.32197 13.3198 8.24864 13.0941 8.07339 12.9668L3.73438 9.81434C3.34253 9.52964 3.54392 8.90983 4.02828 8.90983H9.39159C9.6082 8.90983 9.80018 8.77035 9.86712 8.56434L11.5245 3.46353Z" fill="{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.summary_star_color }}{% endif %}"/>
            </svg>
          {% endfor %}
        </div>
      </span>
      <span class="rating-text">
        <span class="rating-value" style="font-weight: bold; color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.rating_value_color }}{% endif %};">{{ section.settings.rating_prefix | default: 'Rated' | escape }} {{ section.settings.rating_number }}/5</span> <span style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.based_on_text_color | default: section.settings.summary_text_color }}{% endif %};">{{ section.settings.based_on_text | default: 'based on' | escape }}</span> 
        <span class="rating-count" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.rating_count_color }}{% endif %};">
          {{ section.settings.custom_review_count_text }}
        </span>
      </span>
    </div>
  </div>

  <div class="reviews-section-header">
    <h2 class="reviews-subtitle section-title heading h1" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.title_color }}{% endif %};
      {% if section.settings.custom_heading_styling %}
        font-size: {{ section.settings.heading_font_size }}px;
        line-height: {{ section.settings.heading_line_height }};
      {% endif %}">
      {{ section.settings.title_text }} <span class="global-accent-text" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.accent_color | default: settings.accent_text_color }}{% endif %};">{{ section.settings.accent_text }}</span>
    </h2>
    {% if section.settings.show_description %}
      <p class="reviews-description" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.description_color }}{% endif %};">
        {{ section.settings.description_text }}
      </p>
    {% endif %}
  </div>

  <div class="reviews-container" data-scroll-amount="{{ section.settings.scroll_amount }}">
    {% for block in section.blocks %}
      {% if block.type == 'review' %}
        <div class="review-card" {{ block.shopify_attributes }}>
          <div class="review-image-container{% if block.settings.wrap_image %} image-wrapped{% endif %}">
            {% if block.settings.review_image != blank %}
              <div class="carousel-review-image">
                <img src="{{ block.settings.review_image | img_url: 'master' }}" alt="Review by {{ block.settings.reviewer_name }}" style="object-position: {{ block.settings.image_position }};{% if block.settings.wrap_image %}object-fit: contain;{% endif %}">
              </div>
            {% else %}
              <div class="carousel-review-image empty-image"></div>
            {% endif %}
          </div>
          
          <div class="review-content">
            <div class="carousel-review-header">
              <div class="review-stars">
                <div class="stars">
                  {% for i in (1..5) %}
                    <svg class="star" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path d="M11.5245 3.46353C11.6741 3.00287 12.3259 3.00287 12.4755 3.46353L14.1329 8.56434C14.1998 8.77035 14.3918 8.90983 14.6084 8.90983H19.9717C20.4561 8.90983 20.6575 9.52964 20.2656 9.81434L15.9266 12.9668C15.7514 13.0941 15.678 13.3198 15.745 13.5258L17.4023 18.6266C17.552 19.0873 17.0248 19.4704 16.6329 19.1857L12.2939 16.0332C12.1186 15.9059 11.8814 15.9059 11.7061 16.0332L7.3671 19.1857C6.97524 19.4704 6.448 19.0873 6.59768 18.6266L8.25503 13.5258C8.32197 13.3198 8.24864 13.0941 8.07339 12.9668L3.73438 9.81434C3.34253 9.52964 3.54392 8.90983 4.02828 8.90983H9.39159C9.6082 8.90983 9.80018 8.77035 9.86712 8.56434L11.5245 3.46353Z" fill="{% if i <= block.settings.rating %}{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.star_filled_color }}{% endif %}{% else %}{% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 40 }}{% else %}{{ section.settings.star_empty_color }}{% endif %}{% endif %}"/>
                    </svg>
                  {% endfor %}
                </div>
              </div>
              
              <div class="reviewer-info-container">
                <div class="reviewer-info" style="
                  color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.reviewer_info_color }}{% endif %};
                  background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_2_color }}{% else %}{{ section.settings.reviewer_info_bg_color }}{% endif %};
                  {% if section.settings.enable_reviewer_info_border %}
                    border: {{ section.settings.reviewer_info_border_width }}px {{ section.settings.reviewer_info_border_style }} {{ section.settings.reviewer_info_border_color }};
                    border-radius: {{ section.settings.reviewer_info_border_radius }}px;
                  {% endif %}
                ">
                  <span class="carousel-reviewer-name">{{ block.settings.reviewer_name }}</span>, 
                  <span class="reviewer-age">{{ block.settings.reviewer_age }}</span>
                  {% if block.settings.show_verified_badge %}
                    <span class="verified-badge" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.verified_badge_color }}{% endif %};">
                      <svg class="verified-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.5924 3.20027C9.34888 3.4078 9.22711 3.51158 9.09706 3.59874C8.79896 3.79854 8.46417 3.93721 8.1121 4.00672C7.95851 4.03705 7.79903 4.04977 7.48008 4.07522C6.6787 4.13918 6.278 4.17115 5.94371 4.28923C5.17051 4.56233 4.56233 5.17051 4.28923 5.94371C4.17115 6.278 4.13918 6.6787 4.07522 7.48008C4.04977 7.79903 4.03705 7.95851 4.00672 8.1121C3.93721 8.46417 3.79854 8.79896 3.59874 9.09706C3.51158 9.22711 3.40781 9.34887 3.20027 9.5924C2.67883 10.2043 2.4181 10.5102 2.26522 10.8301C1.91159 11.57 1.91159 12.43 2.26522 13.1699C2.41811 13.4898 2.67883 13.7957 3.20027 14.4076C3.40778 14.6511 3.51158 14.7729 3.59874 14.9029C3.79854 15.201 3.93721 15.5358 4.00672 15.8879C4.03705 16.0415 4.04977 16.201 4.07522 16.5199C4.13918 17.3213 4.17115 17.722 4.28923 18.0563C4.56233 18.8295 5.17051 19.4377 5.94371 19.7108C6.278 19.8288 6.6787 19.8608 7.48008 19.9248C7.79903 19.9502 7.95851 19.963 8.1121 19.9933C8.46417 20.0628 8.79896 20.2015 9.09706 20.4013C9.22711 20.4884 9.34887 20.5922 9.5924 20.7997C10.2043 21.3212 10.5102 21.5819 10.8301 21.7348C11.57 22.0884 12.43 22.0884 13.1699 21.7348C13.4898 21.5819 13.7957 21.3212 14.4076 20.7997C14.6511 20.5922 14.7729 20.4884 14.9029 20.4013C15.201 20.2015 15.5358 20.0628 15.8879 19.9933C16.0415 19.963 16.201 19.9502 16.5199 19.9248C17.3213 19.8608 17.722 19.8288 18.0563 19.7108C18.8295 19.4377 19.4377 18.8295 19.7108 18.0563C19.8288 17.722 19.8608 17.3213 19.9248 16.5199C19.9502 16.201 19.963 16.0415 19.9933 15.8879C20.0628 15.5358 20.2015 15.201 20.4013 14.9029C20.4884 14.7729 20.5922 14.6511 20.7997 14.4076C21.3212 13.7957 21.5819 13.4898 21.7348 13.1699C22.0884 12.43 22.0884 11.57 21.7348 10.8301C21.5819 10.5102 21.3212 10.2043 20.7997 9.5924C20.5922 9.34887 20.4884 9.22711 20.4013 9.09706C20.2015 8.79896 20.0628 8.46417 19.9933 8.1121C19.963 7.95851 19.9502 7.79903 19.9248 7.48008C19.8608 6.6787 19.8288 6.278 19.7108 5.94371C19.4377 5.17051 18.8295 4.56233 18.0563 4.28923C17.722 4.17115 17.3213 4.13918 16.5199 4.07522C16.201 4.04977 16.0415 4.03705 15.8879 4.00672C15.5358 3.93721 15.201 3.79854 14.9029 3.59874C14.7729 3.51158 14.6511 3.40781 14.4076 3.20027C13.7957 2.67883 13.4898 2.41811 13.1699 2.26522C12.43 1.91159 11.57 1.91159 10.8301 2.26522C10.5102 2.4181 10.2043 2.67883 9.5924 3.20027ZM16.3735 9.86314C16.6913 9.5453 16.6913 9.03 16.3735 8.71216C16.0557 8.39433 15.5403 8.39433 15.2225 8.71216L10.3723 13.5624L8.77746 11.9676C8.45963 11.6498 7.94432 11.6498 7.62649 11.9676C7.30866 12.2854 7.30866 12.8007 7.62649 13.1186L9.79678 15.2889C10.1146 15.6067 10.6299 15.6067 10.9478 15.2889L16.3735 9.86314Z" fill="{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.verified_icon_color }}{% endif %}"/>
                      </svg>
                      {{ section.settings.verified_badge_text | escape }}
                    </span>
                  {% endif %}
                </div>
              </div>
            </div>
            
            <div class="review-text" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.review_text_color }}{% endif %};">
              {{ block.settings.review_text }}
            </div>
            
            {% if block.settings.show_purchased_product %}
            <div class="product-purchased-container">
              <div class="product-purchased" style="border: {% if section.settings.use_theme_colors %}1px solid {{ settings.global_section_text_color | color_lighten: 70 }}{% else %}{{ section.settings.product_border_width }}px {{ section.settings.product_border_style }} {{ section.settings.product_border_color }}{% endif %}; background-color: {% if section.settings.use_theme_colors %}#fbfbfb{% else %}{{ section.settings.product_bg_color }}{% endif %};">
                <div class="product-details">
                  {% if block.settings.product_reference != blank %}
                    {% assign product = all_products[block.settings.product_reference] %}
                    <div class="review-product-image">
                      {% if product.featured_image != blank %}
                        <img src="{{ product.featured_image | img_url: '100x' }}" alt="{{ product.title }}">
                      {% elsif block.settings.product_image %}
                        <img src="{{ block.settings.product_image | img_url: '100x' }}" alt="{{ block.settings.product_title }}">
                      {% endif %}
                    </div>
                    <div class="product-info">
                      <p class="review-product-title" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.product_title_color }}{% endif %};">{{ product.title }}</p>
                      <p class="product-price" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.product_price_color }}{% endif %};">
                        {{ product.price | money }}
                        {% if product.compare_at_price > product.price %}
                          <span class="product-compare-price">{{ product.compare_at_price | money }}</span>
                        {% endif %}
                      </p>
                      {% if block.settings.show_purchase_date %}
                        <p class="product-purchase-date" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_color }}{% endif %};">
                          <svg class="purchase-date-icon" xmlns="http://www.w3.org/2000/svg" width="11" height="11" viewBox="0 0 24 24" fill="none" stroke="{% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_icon_color }}{% endif %}" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="display: block;">
                            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <path d="M16 10a4 4 0 0 1-8 0"></path>
                          </svg>
                          {{ section.settings.purchase_date_prefix | default: 'Purchased on' | escape }} {{ block.settings.purchase_date | default: 'March 14th, 2025' }}
                        </p>
                      {% endif %}
                    </div>
                  {% elsif block.settings.product_title != blank %}
                    {% if block.settings.product_image %}
                      <div class="review-product-image">
                        <img src="{{ block.settings.product_image | img_url: '100x' }}" alt="{{ block.settings.product_title }}">
                      </div>
                    {% endif %}
                    <div class="product-info">
                      <p class="review-product-title" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.product_title_color }}{% endif %};">{{ block.settings.product_title }}</p>
                      {% if block.settings.product_price != blank %}
                        <p class="product-price" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.product_price_color }}{% endif %};">
                          {{ block.settings.product_price }}
                          {% if block.settings.product_compare_price != blank %}
                            <span class="product-compare-price">{{ block.settings.product_compare_price }}</span>
                          {% endif %}
                        </p>
                      {% endif %}
                      {% if block.settings.show_purchase_date %}
                        <p class="product-purchase-date" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_color }}{% endif %};">
                          <svg class="purchase-date-icon" xmlns="http://www.w3.org/2000/svg" width="11" height="11" viewBox="0 0 24 24" fill="none" stroke="{% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_icon_color }}{% endif %}" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="display: block;">
                            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <path d="M16 10a4 4 0 0 1-8 0"></path>
                          </svg>
                          {{ section.settings.purchase_date_prefix | default: 'Purchased on' | escape }} {{ block.settings.purchase_date | default: 'March 14th, 2025' }}
                        </p>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="reviews-navigation-container">
    <div class="reviews-navigation">
      <button class="nav-button prev" aria-label="Previous reviews"
              style="background: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.prev_button_bg }}{% endif %}; 
                     color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.prev_button_color }}{% endif %}; 
                     border-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 70 }}{% else %}{{ section.settings.prev_button_border }}{% endif %};">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="nav-button next" aria-label="Next reviews"
              style="background: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.next_button_bg }}{% endif %}; 
                     color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.next_button_color }}{% endif %}; 
                     border-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.next_button_border }}{% endif %};">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
/* Dynamic styles */
:root {
  --section-max-width: {{ section.settings.section_width }}px;
}

/* Section Background */
.reviews-transformation-section {
  background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_background }}{% endif %} !important;
}

/* Header Styles with increased specificity */
.reviews-transformation-section .reviews-subtitle,
.reviews-transformation-section .reviews-subtitle.section-title,
.reviews-transformation-section .reviews-subtitle.heading,
.reviews-transformation-section .reviews-subtitle.h1 {
  {% unless section.settings.custom_heading_styling %}
    font-size: 3.5rem !important;
    font-weight: var(--font-weight-bold) !important;
    letter-spacing: var(--letter-spacing-heading) !important;
  {% else %}
    font-size: {{ section.settings.heading_font_size }}px !important;
    line-height: {{ section.settings.heading_line_height }} !important;
    letter-spacing: var(--letter-spacing-heading) !important;
  {% endunless %}
  color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.title_color }}{% endif %} !important;
}

.reviews-transformation-section .global-accent-text,
.reviews-transformation-section .reviews-subtitle .global-accent-text {
  {% if section.settings.use_theme_colors %}
    {% if section.settings.use_accent_gradient %}
      background: linear-gradient({{ section.settings.accent_gradient_angle }}deg, {{ section.settings.accent_gradient_start_color }} 0%, {{ section.settings.accent_gradient_end_color }} 100%) !important;
      -webkit-background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      background-clip: text !important;
      color: transparent !important;
    {% else %}
      color: {{ settings.global_section_accent_1_color }} !important;
    {% endif %}
  {% else %}
    {% if section.settings.use_accent_gradient %}
      background: linear-gradient({{ section.settings.accent_gradient_angle }}deg, {{ section.settings.accent_gradient_start_color }} 0%, {{ section.settings.accent_gradient_end_color }} 100%) !important;
      -webkit-background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      background-clip: text !important;
      color: transparent !important;
    {% else %}
      color: {{ section.settings.accent_color | default: settings.accent_text_color }} !important;
    {% endif %}
  {% endif %}
  letter-spacing: var(--letter-spacing-heading) !important;
  {% if section.settings.accent_font_family != 'inherit' %}
    {% if section.settings.accent_font_family == 'serif' %}
      font-family: serif !important;
    {% elsif section.settings.accent_font_family == 'Georgia Pro' %}
      font-family: 'Georgia Pro', Georgia, serif !important;
    {% elsif section.settings.accent_font_family == 'Bodoni Moda' %}
      font-family: 'Bodoni Moda', Georgia, serif !important;
    {% endif %}
  {% endif %}
  {% if section.settings.accent_font_style != 'inherit' %}
    font-style: {{ section.settings.accent_font_style }} !important;
  {% endif %}
  {% if section.settings.accent_font_weight != 'inherit' %}
    font-weight: {{ section.settings.accent_font_weight }} !important;
  {% endif %}
  padding-right: 4px !important;
  display: inline-block !important;
}

/* Enhanced specificity for custom accent text */
.reviews-transformation-section .custom-accent-text {
