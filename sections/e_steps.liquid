{{ 'section-steps.css' | asset_url | stylesheet_tag }}

{% comment %}
  Steps Results Section
  - Shows a process in numbered steps with images
  - Responsive layout: horizontal on desktop, vertical on mobile
  - Fully customizable colors, typography, and spacing
  - Supports theme color system or custom colors
{% endcomment %}

<style>
  :root {
    --section-bg-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% elsif section.settings.use_gradient %}linear-gradient(to bottom, {{ section.settings.gradient_start_color }} 0%, {{ section.settings.gradient_end_color }} 100%){% else %}{{ section.settings.section_background }}{% endif %};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-horizontal: {{ section.settings.padding_horizontal }}px;
    
    --title-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.title_color }}{% endif %};
    --highlight-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.highlight_color }}{% endif %};
    --subtitle-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subtitle_color }}{% endif %};
    
    --card-border-radius: {{ section.settings.card_border_radius }}px;
    --card-border-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.card_border_color }}{% endif %};
    
    --step-title-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.step_title_color }}{% endif %};
    --description-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.description_color }}{% endif %};
    
    --number-border-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.number_border_color }}{% endif %};
    --label-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.label_color }}{% endif %};
    
    --title-size: {{ section.settings.title_size_desktop }}px;
    --title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --subtitle-size: {{ section.settings.subtitle_size_desktop }}px;
    --subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
    
    --step-title-size: {{ section.settings.step_title_size_desktop }}px;
    --step-title-size-mobile: {{ section.settings.step_title_size_mobile }}px;
    --step-description-size: {{ section.settings.step_description_size_desktop }}px;
    --step-description-size-mobile: {{ section.settings.step_description_size_mobile }}px;
    
    --number-size: {{ section.settings.number_size_desktop }}px;
    --number-size-mobile: {{ section.settings.number_size_mobile }}px;
    --number-circle-size: {{ section.settings.number_circle_size_desktop }}px;
    --number-circle-size-mobile: {{ section.settings.number_circle_size_mobile }}px;
    
    --title-margin-bottom: {% if section.settings.subtitle != blank %}10px{% else %}20px{% endif %};
    --title-margin-bottom-tablet: {% if section.settings.subtitle != blank %}12px{% else %}25px{% endif %};
    --title-margin-bottom-mobile: {% if section.settings.subtitle != blank %}8px{% else %}20px{% endif %};
    
    --accent-text-style: {{ settings.accent_text_style }};
    --accent-text-font-family: {{ settings.accent_text_font.family }}, {{ settings.accent_text_font.fallback_families }};
    --accent-text-weight: {{ settings.accent_text_weight }};
  }

  /* Apply section background */
  .results-steps-section {
    background: var(--section-bg-color) !important;
    padding-top: var(--padding-top) !important;
    padding-bottom: var(--padding-bottom) !important;
    padding-left: var(--padding-horizontal) !important;
    padding-right: var(--padding-horizontal) !important;
  }

  /* Override global classes for custom colors */
  .results-steps-section .section-title.global-heading,
  .results-steps-section .section-title {
    color: var(--title-color) !important;
    font-size: var(--title-size) !important;
    margin-bottom: var(--title-margin-bottom) !important;
  }

  .results-steps-section .section-title .global-accent-text,
  .results-steps-section .section-title span {
    color: var(--highlight-color) !important;
  }

  .results-steps-section .section-subtitle {
    color: var(--subtitle-color) !important;
    font-size: var(--subtitle-size) !important;
  }

  .results-steps-section .step-title {
    color: var(--step-title-color) !important;
    font-size: var(--step-title-size) !important;
  }

  .results-steps-section .step-description,
  .results-steps-section .step-description.global-text {
    color: var(--description-color) !important;
    font-size: var(--step-description-size) !important;
  }

  .results-steps-section .number-icon {
    color: var(--label-color) !important;
    border-color: var(--number-border-color) !important;
    font-size: var(--number-size) !important;
    width: var(--number-circle-size) !important;
    height: var(--number-circle-size) !important;
  }

  /* Mobile responsive styles */
  @media (max-width: 768px) {
    .results-steps-section .section-title.global-heading,
    .results-steps-section .section-title {
      font-size: var(--title-size-mobile) !important;
      margin-bottom: var(--title-margin-bottom-mobile) !important;
    }

    .results-steps-section .section-subtitle {
      font-size: var(--subtitle-size-mobile) !important;
    }

    .results-steps-section .step-title {
      font-size: var(--step-title-size-mobile) !important;
    }

    .results-steps-section .step-description,
    .results-steps-section .step-description.global-text {
      font-size: var(--step-description-size-mobile) !important;
    }

    .results-steps-section .number-icon {
      font-size: var(--number-size-mobile) !important;
      width: var(--number-circle-size-mobile) !important;
      height: var(--number-circle-size-mobile) !important;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .results-steps-section .section-title.global-heading,
    .results-steps-section .section-title {
      margin-bottom: var(--title-margin-bottom-tablet) !important;
    }
  }
</style>

<section class="page-width results-steps-section">
  <h2 class="section-title global-heading">{{ section.settings.title }} <span class="global-accent-text">{{ section.settings.title_highlight }}</span></h2>
  
  {% if section.settings.subtitle != blank %}
    <div class="section-subtitle">{{ section.settings.subtitle }}</div>
  {% endif %}
  
  <div class="steps-container">
    {% for block in section.blocks %}
      {% if block.type == 'step' %}
        <div class="step-item" {{ block.shopify_attributes }}>
          <div class="step-card">
            <style>
              .step-item:nth-child({{ forloop.index }}) .step-image-container {
                --image-bg-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ block.settings.image_background_color }}{% endif %};
              }
              .step-item:nth-child({{ forloop.index }}) .step-content {
                --content-bg-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ block.settings.content_background_color }}{% endif %};
              }
            </style>
            <div class="step-image-container">
              {% if block.settings.step_image != blank %}
                <img src="{{ block.settings.step_image | img_url: 'master' }}" alt="{{ block.settings.step_title }}" class="step-image">
              {% else %}
                <div class="step-image placeholder-image"></div>
              {% endif %}
            </div>
            <div class="step-content">
              <div class="step-title-container">
                <div class="number-icon">{{ forloop.index }}</div>
                <h3 class="step-title">{{ block.settings.step_title }}</h3>
              </div>
              <p class="step-description global-text">{{ block.settings.step_description }}</p>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

