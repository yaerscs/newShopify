      grid-auto-rows: 1fr;
      gap: 8px;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
      justify-content: center;
    }
    
    .statistic-item {
      max-width: 245px;
      margin: 0 auto;
      width: 100%;
      max-width: 180px;
      margin: 0 auto;
      display: flex;
      justify-content: center;
    }
    
    .statistic-card {
      max-width: none;
      max-height: none;
      padding: 14.5px 8px;
      margin: 0 auto;
      width: 100%;
    }
    
    .statistic-circle-container {
      width: 60%;
      margin-bottom: 0px;
    }
    
    .percentage-text {
      font-size: clamp(16px, 5vw, 22px);
    }
    
    .statistic-title {
      font-size: clamp(13px, 3.5vw, 17px);
      margin-bottom: 4px;
      margin-top: 8px;
    }
    
    .statistic-description {
      font-size: clamp(10px, 2.8vw, 14px);
      line-height: 1.3;
    }
  }
  
  /* Container-specific adjustments */
  .statistics-section__container.contained {
    padding-left: 20px;
    padding-right: 20px;
  }
  
  .statistics-section__container.contained .statistics-grid {
    max-width: calc(100% - 40px);
  }
  
  @media screen and (max-width: 749px) {
    .statistics-section__container.contained {
      padding-left: 15px;
      padding-right: 15px;
    }
    
    .statistics-section__container.contained .statistics-grid {
      max-width: calc(100% - 30px);
    }
  }
  
  /* Enhanced accent text styling */
  .statistics-accent-text,
  .statistics-section .global-accent-text,
  .statistics-section .custom-accent-text {
    {% if section.settings.use_accent_gradient %}
      background: linear-gradient({{ section.settings.accent_gradient_angle | default: 45 }}deg, {{ section.settings.accent_gradient_start_color | default: '#EF4A65' }} 0%, {{ section.settings.accent_gradient_end_color | default: '#FF6B9D' }} 100%) !important;
      -webkit-background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      background-clip: text !important;
      color: transparent !important;
    {% else %}
      {% if section.settings.use_theme_colors %}
        color: {{ settings.colors_text | default: settings.global_section_text_color | default: section.settings.heading_accent_color | default: '#ffffff' }} !important;
      {% else %}
        color: {{ section.settings.heading_accent_color | default: '#ffffff' }} !important;
      {% endif %}
    {% endif %}
    {% if section.settings.accent_font_family != 'inherit' %}
      {% if section.settings.accent_font_family == 'serif' %}
        font-family: serif !important;
      {% elsif section.settings.accent_font_family == 'Georgia Pro' %}
        font-family: 'Georgia Pro', Georgia, serif !important;
      {% elsif section.settings.accent_font_family == 'Bodoni Moda' %}
        font-family: 'Bodoni Moda', Georgia, serif !important;
      {% endif %}
    {% endif %}
    {% if section.settings.accent_font_style != 'normal' %}
