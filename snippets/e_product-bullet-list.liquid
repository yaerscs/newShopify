{% comment %}
  Product Bullet List Snippet
  
  Parameters:
  - bullet_1: First bullet point text
  - bullet_2: Second bullet point text
  - bullet_3: Third bullet point text
  - use_custom_icon_1: Boolean to use custom icon for first bullet (default: false)
  - use_custom_icon_2: Boolean to use custom icon for second bullet (default: false)
  - use_custom_icon_3: Boolean to use custom icon for third bullet (default: false)
  - custom_icon_1: Custom SVG code for first bullet
  - custom_icon_2: Custom SVG code for second bullet
  - custom_icon_3: Custom SVG code for third bullet
  - icon_color: Color for the default icons (default: #1C274C)
  - text_color: Color for the bullet text (default: #333333)
  - icon_size: Size of the icon in pixels (default: 16)
  - text_size: Size of the text in pixels (default: 12)
  - spacing: Spacing between bullets in pixels (default: 12)
  - margin_top: Top margin in pixels
  - margin_bottom: Bottom margin in pixels
  - show_bg: Enable background color (default: false)
  - bg_color: Background color for items (default: #f5f5f5)
  - use_gradient: Enable gradient background (default: false)
  - gradient_start: Gradient start color (default: #f5f5f5)
  - gradient_end: Gradient end color (default: #e0e0e0)
  - gradient_direction: Gradient direction (default: to right)
  - border_radius: Border radius in pixels (default: 4)
  - block: Block object for Shopify block attributes
{% endcomment %}

{% assign bullet_1 = bullet_1 | default: block.settings.bullet_1 %}
{% assign bullet_2 = bullet_2 | default: block.settings.bullet_2 %}
{% assign bullet_3 = bullet_3 | default: block.settings.bullet_3 %}
{% assign use_custom_icon_1 = use_custom_icon_1 | default: block.settings.use_custom_icon_1 %}
{% assign use_custom_icon_2 = use_custom_icon_2 | default: block.settings.use_custom_icon_2 %}
{% assign use_custom_icon_3 = use_custom_icon_3 | default: block.settings.use_custom_icon_3 %}
{% assign custom_icon_1 = custom_icon_1 | default: block.settings.custom_icon_1 %}
{% assign custom_icon_2 = custom_icon_2 | default: block.settings.custom_icon_2 %}
{% assign custom_icon_3 = custom_icon_3 | default: block.settings.custom_icon_3 %}
{% assign icon_color = icon_color | default: block.settings.icon_color | default: "#1C274C" %}
{% assign text_color = text_color | default: block.settings.text_color | default: "#333333" %}
{% assign icon_size = icon_size | default: block.settings.icon_size | default: 16 | plus: 0 %}
{% assign text_size = text_size | default: block.settings.text_size | default: 12 | plus: 0 %}
{% assign spacing = spacing | default: block.settings.spacing | default: 12 | plus: 0 %}
{% assign margin_top = margin_top | default: block.settings.margin_top | default: 0 | plus: 0 %}
{% assign margin_bottom = margin_bottom | default: block.settings.margin_bottom | default: 0 | plus: 0 %}
{% assign show_bg = show_bg | default: block.settings.show_bg | default: false %}
{% assign bg_color = bg_color | default: block.settings.bg_color | default: "#f5f5f5" %}
{% assign use_gradient = use_gradient | default: block.settings.use_gradient | default: false %}
{% assign gradient_start = gradient_start | default: block.settings.gradient_start | default: "#f5f5f5" %}
{% assign gradient_end = gradient_end | default: block.settings.gradient_end | default: "#e0e0e0" %}
{% assign gradient_direction = gradient_direction | default: block.settings.gradient_direction | default: "to right" %}
{% assign border_radius = border_radius | default: block.settings.border_radius | default: 4 | plus: 0 %}

