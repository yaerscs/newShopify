<div class="product-bullet-list" {{ block.shopify_attributes }} style="margin-top: {{ margin_top }}px; margin-bottom: {{ margin_bottom }}px;">
  <ul class="product-bullet-items" style="gap: {{ spacing }}px;">
    {% if bullet_1 != blank %}
      <li class="product-bullet-item{% if show_bg %} has-bg{% endif %}" style="{% if show_bg %}{% if use_gradient %}background: linear-gradient({{ gradient_direction }}, {{ gradient_start }}, {{ gradient_end }});{% else %}background-color: {{ bg_color }};{% endif %} border-radius: {{ border_radius }}px;{% endif %}">
        <div class="product-bullet-icon">
          {% if use_custom_icon_1 and custom_icon_1 != blank %}
            {{ custom_icon_1 }}
          {% else %}
            {{ default_icon }}
          {% endif %}
        </div>
        <span class="product-bullet-text" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ text_color }}{% endif %}; font-size: {{ text_size }}px;">{{ bullet_1 }}</span>
      </li>
    {% endif %}
    
    {% if bullet_2 != blank %}
      <li class="product-bullet-item{% if show_bg %} has-bg{% endif %}" style="{% if show_bg %}{% if use_gradient %}background: linear-gradient({{ gradient_direction }}, {{ gradient_start }}, {{ gradient_end }});{% else %}background-color: {{ bg_color }};{% endif %} border-radius: {{ border_radius }}px;{% endif %}">
        <div class="product-bullet-icon">
          {% if use_custom_icon_2 and custom_icon_2 != blank %}
            {{ custom_icon_2 }}
          {% else %}
            {{ default_icon }}
          {% endif %}
        </div>
        <span class="product-bullet-text" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ text_color }}{% endif %}; font-size: {{ text_size }}px;">{{ bullet_2 }}</span>
      </li>
    {% endif %}
    
    {% if bullet_3 != blank %}
      <li class="product-bullet-item{% if show_bg %} has-bg{% endif %}" style="{% if show_bg %}{% if use_gradient %}background: linear-gradient({{ gradient_direction }}, {{ gradient_start }}, {{ gradient_end }});{% else %}background-color: {{ bg_color }};{% endif %} border-radius: {{ border_radius }}px;{% endif %}">
        <div class="product-bullet-icon">
          {% if use_custom_icon_3 and custom_icon_3 != blank %}
            {{ custom_icon_3 }}
          {% else %}
            {{ default_icon }}
          {% endif %}
        </div>
        <span class="product-bullet-text" style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ text_color }}{% endif %}; font-size: {{ text_size }}px;">{{ bullet_3 }}</span>
      </li>
    {% endif %}
  </ul>
</div>

<style>
  .product-bullet-list {
    width: 100%;
    font-family: var(--font-body-family-override, sans-serif);
    letter-spacing: var(--letter-spacing-body);
  }
  
  .product-bullet-items {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }
  
  .product-bullet-item {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    width: fit-content;
    max-width: 100%;
  }
  
  .product-bullet-item.has-bg {
    padding: 5px 8px;
  }
  
  .product-bullet-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .product-bullet-text {
    line-height: 1.4;
  }
  
  /* Mobile styling */
  @media screen and (max-width: 767px) {
    .product-bullet-text {
      font-size: calc({{ text_size }}px * 0.9) !important;
    }
    
    .product-bullet-icon svg {
      width: calc({{ icon_size }}px * 0.9);
      height: calc({{ icon_size }}px * 0.9);
    }
  }
</style> 