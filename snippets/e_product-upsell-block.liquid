       style="margin-top: {{ top_margin }}px; margin-bottom: {{ bottom_margin }}px;"
       {{ block.shopify_attributes }}>
    <div class="upsell-product-card-{{ block.id }}">
      {% if show_best_seller_tag and best_seller_text != blank %}
        <div class="upsell-best-seller-tag-{{ block.id }}">
          {% if block.settings.custom_bestseller_svg != blank %}
            {{ block.settings.custom_bestseller_svg }}
          {% else %}
