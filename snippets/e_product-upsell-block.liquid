{%- comment -%}
  Product Upsell Block
  - Renders a product card for upselling within another product's details.
  - Customizable via block settings.
{%- endcomment -%}

{%- liquid
  assign upsell_product = block.settings.upsell_product
  assign show_best_seller_tag = block.settings.show_best_seller_tag
  assign best_seller_text = block.settings.best_seller_text
  assign best_seller_tag_color = block.settings.best_seller_tag_color
  assign best_seller_tag_text_color = block.settings.best_seller_tag_text_color | default: '#FFFFFF'
  assign card_bg_color = block.settings.card_background_color
  assign product_image_bg_color = block.settings.product_image_background_color
  assign image_border_radius = block.settings.image_border_radius | default: 4
  
  # Fix color logic: prioritize block settings when theme colors are off
  assign title_color = block.settings.title_color | default: '#111111'
  if section.settings.use_theme_colors
    assign description_color = settings.global_section_text_color
  else
    assign description_color = block.settings.description_color | default: title_color
  endif
  
  assign variant_text_color = block.settings.variant_text_color
  assign variant_bg_color = block.settings.variant_background_color
  assign variant_border_color = block.settings.variant_border_color
  
  # Ensure button colors always apply correctly regardless of theme settings
  assign button_bg_color = block.settings.button_background_color | default: '#1d1e3a'
  assign button_text = block.settings.button_text | default: 'Add +'
  assign button_text_color = block.settings.button_text_color | default: '#FFFFFF'
  
  assign card_border_radius = block.settings.card_border_radius
  assign top_margin = block.settings.margin_top
  assign bottom_margin = block.settings.margin_bottom
  
  assign border_color = block.settings.border_color | default: 'transparent'
  assign border_style = block.settings.border_style | default: 'none'
  assign border_width = block.settings.border_width | default: 0
  
  assign show_description = block.settings.show_description | default: false
  assign description_text = block.settings.description_text
  
  assign product_form_id = 'product-form-' | append: section.id | append: '-' | append: upsell_product.id | append: '-' | append: block.id

  assign upsell_product_runtime = all_products[upsell_product]
  
  # Get current currency and money format for JavaScript
  assign current_currency = cart.currency.iso_code | default: 'EUR'
  assign current_money_format = shop.money_format | default: '€{{amount_with_comma_separator}}'
-%}

{% if upsell_product != blank %}
