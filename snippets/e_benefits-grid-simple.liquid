  Usage:
  {% render 'e_benefits-grid-simple', 
    grid_class: 'custom-class',
    columns_desktop: 2,
    columns_mobile: 1,
    gap: 15,
    max_width: 500,
    icon_bg_color: '#00C7FF',
    icon_stroke_color: '#000000',
    text_color: '#000000',
    font_size_desktop: 14,
    font_size_mobile: 12,
    benefit1_text: 'Benefit 1',
    benefit1_icon: 'star',
    benefit1_custom_icon: '',
    benefit2_text: 'Benefit 2',
    benefit2_icon: 'clock',
    benefit2_custom_icon: '',
    benefit3_text: 'Benefit 3',
    benefit3_icon: 'wand',
    benefit3_custom_icon: '',
    benefit4_text: 'Benefit 4',
    benefit4_icon: 'badge',
    benefit4_custom_icon: ''
  %}
{% endcomment %}

{%- comment -%}Determine the grid classes based on columns{%- endcomment -%}
{%- assign desktop_class = 'benefits-grid--columns-' | append: columns_desktop | default: 2 -%}
{%- assign mobile_class = 'benefits-grid--mobile-columns-' | append: columns_mobile | default: 2 -%}

