<style>
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(var(--grid-columns, 2), 1fr);
    margin: 0 auto;
    width: 100%;
  }
  
  .benefits-grid--columns-1 {
    --grid-columns: 1;
  }
  
  .benefits-grid--columns-2 {
    --grid-columns: 2;
  }
  
  .benefits-grid--columns-3 {
    --grid-columns: 3;
  }
  
  .benefits-grid--columns-4 {
    --grid-columns: 4;
  }
  
  .benefit-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 8px;
    padding: 10px;
  }
  
  .benefit-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-bottom: 5px;
  }
  
  .benefit-icon svg {
    width: 70px;
    height: 70px;
  }
  
  .benefit-text {
    line-height: 1.4;
  }
  
  @media (max-width: 768px) {
    .benefits-grid--mobile-columns-1 {
      --grid-columns: 1;
    }
    
    .benefits-grid--mobile-columns-2 {
      --grid-columns: 2;
    }
    
    .benefit-text {
      font-size: {{ font_size_mobile | default: 12 }}px !important;
    }
  }
</style> 