{% comment %}
  Customizable guarantee badges snippet.
  Accepts:
    - badge_1_show: boolean - show first badge
    - badge_1_text: string - text for first badge
    - badge_1_icon: string - icon for first badge (shield by default)
    - badge_2_show: boolean - show second badge
    - badge_2_text: string - text for second badge
    - badge_2_icon: string - icon for second badge (checkmark by default)
    - icon_color: color - color for icons
    - text_color: color - color for text
    - container_margin_top: number - top margin for container
    - container_margin_bottom: number - bottom margin for container
    - font_size: number - font size in pixels
    - align_center: boolean - center badges
{% endcomment %}

<style>
  .guarantee-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ gap | default: 6 }}px;
    margin-top: {{ container_margin_top | default: -5 }}px;
    margin-bottom: {{ container_margin_bottom | default: 10 }}px;
    font-size: {{ font_size | default: 11 }}px;
    letter-spacing: var(--letter-spacing-body);
  color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ text_color | default: "#000000" }}{% endif %} !important;
    width: 100%;
    flex-direction: {% if mobile_stack %}column{% else %}row{% endif %};
  }
  
  .guarantee-item {
    display: flex;
    align-items: center;
    gap: 4px;
    white-space: nowrap;
  }
  
  .guarantee-icon {
    width: {{ icon_size | default: 12 }}px;
    height: {{ icon_size | default: 12 }}px;
    stroke: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ icon_color | default: "#00C7FF" }}{% endif %};
    margin-bottom: 1px;
  }
  
  .guarantee-text {
    font-weight: {{ text_weight | default: 500 }};
    letter-spacing: var(--letter-spacing-body);
  }
  
  @media (max-width: 480px) {
    .guarantee-container {
      flex-direction: {% if mobile_stack %}column{% else %}row{% endif %};
      {% if mobile_stack %}gap: 6px;{% endif %}
      justify-content: center;
      margin-top: {{ container_margin_top | default: -5 }}px;
    }
  }
</style>

<div class="guarantee-container" {{ block.shopify_attributes }}>
  {% if badge_1_show %}
  <div class="guarantee-item">
    {% if badge_1_icon == 'shield' or badge_1_icon == blank %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
      </svg>
    {% elsif badge_1_icon == 'checkmark' %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="20 6 9 17 4 12"></polyline>
      </svg>
    {% elsif badge_1_icon == 'clock' %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <polyline points="12 6 12 12 16 14"></polyline>
      </svg>
    {% elsif badge_1_icon == 'truck' %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <rect x="1" y="3" width="15" height="13"></rect>
        <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
        <circle cx="5.5" cy="18.5" r="2.5"></circle>
        <circle cx="18.5" cy="18.5" r="2.5"></circle>
      </svg>
    {% elsif badge_1_icon == 'custom' and badge_1_custom_icon != blank %}
      {{ badge_1_custom_icon }}
    {% endif %}
    <span class="guarantee-text">{{ badge_1_text | default: "30-Day Money-Back Guarantee" }}</span>
  </div>
  {% endif %}
  
  {% if badge_2_show %}
  <div class="guarantee-item">
    {% if badge_2_icon == 'checkmark' or badge_2_icon == blank %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="20 6 9 17 4 12"></polyline>
      </svg>
    {% elsif badge_2_icon == 'shield' %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
      </svg>
    {% elsif badge_2_icon == 'clock' %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <polyline points="12 6 12 12 16 14"></polyline>
      </svg>
    {% elsif badge_2_icon == 'truck' %}
      <svg class="guarantee-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
        <rect x="1" y="3" width="15" height="13"></rect>
        <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
        <circle cx="5.5" cy="18.5" r="2.5"></circle>
        <circle cx="18.5" cy="18.5" r="2.5"></circle>
      </svg>
    {% elsif badge_2_icon == 'custom' and badge_2_custom_icon != blank %}
      {{ badge_2_custom_icon }}
    {% endif %}
    <span class="guarantee-text">{{ badge_2_text | default: "Free Shipping Included" }}</span>
  </div>
  {% endif %}
</div> 